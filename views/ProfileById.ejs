<!DOCTYPE html>
<html lang="en" style="background-color: black;">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> <%= data.username %> </title>
    <%- include('./components/script') %>
</head>
<body>
    <%- include('./components/navbar') %>

    <div style="display:flex; justify-content: center;">

        <!-- card -->
            <div style="display: flex; flex-direction: column; align-items: center; gap: 2rem;">
              
              
              <div class="card  shadow-xl border border-orange-200" style="margin-top: 25px;width: 550px; height: 630px;background-color: rgb(38, 38, 38); ">
        
        
        
                  <a href=""><p style="margin-left: 20px;font-size: 25px;margin-top: 5px;"> @<%= data.username %> </p></a>
                  
                  <% data.Posts.forEach(post => { %>
                    
                    <figure>
                      <img style="width: 400px; height: 400px; margin-top: 15px;" src="<%= post.imgUrl %>" alt="kkk">
                    </figure>
        
        
                    <div class="card-body" style="margin-bottom: 25px;">
                      <h2 class="card-title" style="font-size: 20px; font-family: sans-serif;"> <%= post.title %> </h2>
        
                      <p style="margin-top: 10px; font-family: 'Times New Roman', Times, serif;"><%= post.description %></p>
        
                      <% post.PostTags.forEach(conjunct => { %>
                        
                        <div class="card-actions justify-end">
                         <a href=""> <div style="margin-top: 10px;" class="badge badge-outline">#<%= conjunct.Tag.hashTag %></div></a>
                          
                        </div>
                        
        
        
                      <% }) %>
        
        
                    </div>
        
                  <% }) %>
                  
                </div>
               
            </div>
        
            
          </div>
    
</body>
</html>